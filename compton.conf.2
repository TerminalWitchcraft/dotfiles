backend = "glx";
glx-swap-method = "buffer-age";
vsync = "opengl-mswc";
glx-no-rebind-pixmap = true;
xrender-sync = true;
xrender-sync-fence = true;
# paint-on-overlay = true;

fading = true;
fade-delta = 10;
fade-in-step = 0.025;
fade-out-step = 0.03;

detect-transient = true;
detect-client-leader = true;

# Opacity
menu-opacity = 0.9;
# inactive-opacity = 0.8;
# active-opacity = 0.8;
frame-opacity = 0.9;
inactive-opacity-override = false;
alpha-step = 0.06;
inactive-dim = 0.05;



